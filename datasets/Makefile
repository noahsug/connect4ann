playHumanvs8ply:
	matlab -r PlayHumanVs8Ply

playHumanvsHeuristic:
	matlab -r PlayHumanVsHeuristic

playCompvsComp:
	matlab -r PlayCompVsComp

playRandomvs8ply:
	matlab -r PlayRandomVs8Ply

playRandomvsHeuristic:
	matlab -r PlayRandomVsHeuristic
    
usage:
	@echo 'to play human vs 8-ply NN:        make playHumanvs8ply'
	@echo 'to play human vs Heuristic NN:    make playHumanvsHeuristic'
	@echo 'to play random vs 8-ply NN:       make playRandomvs8ply'
	@echo 'to play random vs Heuristic NN:   make playRandomvsHeuristic'    
	@echo 'to play heuristic NN vs 8-ply NN: make playCompvsComp'
